.webpage-card{
    margin-bottom:10px;
    min-height: 240px;
}

.card-image{
    max-height:150px;
}

.webpage-card:hover{
    cursor:pointer;
    box-shadow: 4px 3px 1px -2px rgba(0,0,0,.2), 4px 1px 1px 1px rgba(0,0,0,.14), 4px 1px 2px 1px rgba(0,0,0,.12);
}

.mat-card{
    padding: 10px;
}

.mat-card-image {
    width: calc(100% + 20px);
    margin: 0 -10px 10px;
}